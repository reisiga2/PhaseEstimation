function [hNew,hGen]=testDiscrete;%test training a single DiscreteD object%Arne Leijon 2005-10-25 testedc='rbgk';%state color coding, max 4 states%make a simple DiscreteD distributionhGen=DiscreteD([3 3 1 1]);%Make a big training data sequence:xTraining=rand(hGen,3000);%training datahNew=GaussMixD([GaussD([-0.3 0],[1 1]),GaussD([0.3 0],[1 1]),GaussD([0 -0.3],[1 1]),GaussD([0 0.3],[1 1])]);%hNew=init(GaussMixD(4),xTraining);%initialize??????????for nTraining=1:10    figure;    plotTraining(xTraining,sT,c);    %also plot error points, as classified by viterbi...    plotCross(get(hNew,'Gaussians'),[1 2],c); 	axis([-10 10 -10 10]);	hold off;%	pause;    %one training step:    aS=adaptStart(hNew);        aS=adaptAccum(hNew,aS,xTraining);    hNew=adaptSet(hNew,aS);end;mixWeight=get(hNew,'MixWeight');display(mixWeight);%more smooth than original weights!!!function plotTraining(xT,sT,c);nStates=max(sT);for s=1:nStates    plot(xT(1,sT==s),xT(2,sT==s),['o',c(s)],'MarkerSize',1.5);    hold on;end;